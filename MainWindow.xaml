<Window x:Class="Tag.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tag"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <UniformGrid Name="gameBoard" Rows="4" Columns="4">
        <StackPanel Margin="0,0,-375,-363" Background="#FFAAA1A1">
            <Label Content="Введите размер поля" Height="59" Width="252" Margin="0,110,0,0" IsEnabled="False" Foreground="Black" FontFamily="Rockwell Extra Bold" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
            <TextBox x:Name="gridSizeInput" Text="4" Width="120" Height="80" TextAlignment="Center" FontFamily="Kristen ITC" FontSize="54" Margin="0,10,0,0" BorderBrush="Black" BorderThickness="3,3,3,3"/>
            <Button Content="Применить" Click="ApplyButton_Click" Width="184" Height="49" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" BorderBrush="Black" BorderThickness="2,2,2,2" FontFamily="Rockwell Extra Bold" FontWeight="Bold"/>
        </StackPanel>
    </UniformGrid>

</Window>
